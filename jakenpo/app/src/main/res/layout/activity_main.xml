<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f1f1f">

    <ImageView
        android:id="@+id/imageViewPadrao"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/padrao"
        android:layout_margin="80dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha uma opção"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#fffaf0"
        android:paddingTop="80dp">

        <ImageView
            android:id="@+id/imageViewPapel"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:src="@drawable/papel"
            />

        <ImageView
            android:id="@+id/imageViewPedra"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:src="@drawable/pedra" />

        <ImageView
            android:id="@+id/imageViewTesoura"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:src="@drawable/tesoura" />

    </LinearLayout>

</LinearLayout>